Listen <%= dashboard_port %>

<VirtualHost *:<%= dashboard_port %>>
  ServerName <%= name %>
  DocumentRoot <%= docroot %>
  RailsBaseURI <%= rails_base_uri %>
  <Directory <%= docroot %>>
    Options None
    AllowOverride AuthConfig
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog /var/log/apache/<%= name %>_error.log
  LogLevel warn
  CustomLog /var/log/apache/<%= name %>_access.log combined
  ServerSignature On
</VirtualHost>